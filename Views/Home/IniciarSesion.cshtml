@{
    ViewData["Title"] = "Iniciar Sesión";
}

<a href='@Url.Action("IrRegistrarse", "Home")'>Registrarse</a>  <!-- ver si esta bien -->

<div>
    <h1>Iniciar sesión</h1>
    <form action='@Url.Action("IniciarSesion", "Home")' method="post">
        <input type="text" name="mail" placeholder="Ingresar mail"/>
        <input type="password" name="contraseña" placeholder="Ingresar contraseña"/>
        <input type="submit" value="Ingresar datos" />
        @if(!ViewBag.mailExiste)
        {
            <p>El mail ingresado no existe</p>
        }
        @if(!ViewBag.contraseñaCoincide)
        {
            <p>La contraseña es incorrecta</p>
        }
    </form>
</div>

<a href='@Url.Action("Index", "Home")'>Inicio</a>